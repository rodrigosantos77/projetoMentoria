<h1>Lista de Usuários</h1>

<%= link_to 'Cadastrar Novo Usuário', new_user_path %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Editar', edit_user_path(user) %> |
          <%= link_to 'Excluir', user_path(user), method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
